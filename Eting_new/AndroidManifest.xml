<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nexters.eting"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- 네트워킹 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- GCM -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.nexters.eting.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.nexters.eting.permission.C2D_MESSAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:theme="@android:style/Theme.NoTitleBar" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- 처음화면 -->
        <activity
            android:name="com.nexters.eting.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 튜토리얼 -->
        <activity
            android:name="com.nexters.eting.TutorialActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 잠금화면 -->
        <activity
            android:name="com.nexters.eting.LockScreenActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 메인 액티비티 -->
        <activity
            android:name="com.nexters.eting.MainViewPagerActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <!-- 받은 이야기 보기 액티비티 -->
        <activity
            android:name="com.nexters.eting.ReadInboxActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <!-- 내 이야기 보기 액티비티 -->
        <activity
            android:name="com.nexters.eting.ReadMyStoryActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent" >
        </activity>

        <!-- 공지메세지 액티비티 -->
        <activity
            android:name="com.nexters.eting.NotifyUfoActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <!-- ###### -->
        <!-- 설정관련 -->
        <!-- ###### -->


        <!-- 설정화면 -->
        <activity
            android:name="com.nexters.eting.SettingActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 만든이 소개 화면 -->
        <activity
            android:name="com.nexters.eting.AboutUsActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 이팅 백업 화면 -->
        <activity
            android:name="com.nexters.eting.BackupActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 비밀번호 설정 화면 -->
        <activity
            android:name="com.nexters.eting.PasswordActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- GCM Setting -->
        <receiver
            android:name="com.nexters.eting.svc.gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.nexters.eting" />
            </intent-filter>
        </receiver>

        <!-- GCM Service -->
        <service android:name="com.nexters.eting.svc.gcm.GcmIntentService" />
    </application>

</manifest>